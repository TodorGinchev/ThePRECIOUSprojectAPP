	            android:name="aalto.comnet.thepreciousgame3.gameScore" 
	            android:label="gameScore" 
	            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:screenOrientation="landscape"
	            android:hardwareAccelerated="false">
       		</activity>
     <!--  Game1 app -->
             <activity
	            android:name="aalto.comnet.thepreciousgame1.MainActivity"
	            android:label="@string/app_name" >
        	 </activity>
        	 <activity
	            android:name="aalto.comnet.thepreciousgame1.Game" 
	            android:label="Game" 
	            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:screenOrientation="portrait"
	            android:hardwareAccelerated="false">
        	 </activity>
     <!--  Location service app -->
    		<service android:name="aalto.comnet.thepreciouslocationservice.LocationService"></service>
     		<receiver android:name="aalto.comnet.thepreciouslocationservice.autostart">
	            <intent-filter>
	                <action android:name="android.intent.action.BOOT_COMPLETED">
	                <category android:name="android.intent.category.HOME">
	            </category></action></intent-filter>
        	</receiver>
