	            </category></action></intent-filter>
        	</receiver>
        	<service android:name="aalto.comnet.thepreciousrecognition.GoodmorningService"></service>
       <!-- Viewer app -->
	       <activity
	            android:name="aalto.comnet.thepreciousviewer.MainActivity"
	            android:label="PRECIOUS" android:screenOrientation="portrait">
	            <intent-filter>
	                <action android:name="android.intent.action.MAIN" />	
	                <category android:name="android.intent.category.LAUNCHER" />
	            </intent-filter>
	        </activity>
	        <activity 
			     android:name="aalto.comnet.thepreciousviewer.Timeline"
			   	 android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:screenOrientation="portrait"> 
			</activity>
			<activity android:name="aalto.comnet.thepreciousviewer.Preferencias" android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:screenOrientation="portrait"></activity>
			<activity android:name="aalto.comnet.thepreciousviewer.About" android:theme="@android:style/Theme.Dialog" android:screenOrientation="portrait"/>
			<service android:name="aalto.comnet.thepreciousviewer.SendLog"></service>
	        <receiver android:name="aalto.comnet.thepreciousviewer.autostart">
	            <intent-filter>
	                <action android:name="android.intent.action.BOOT_COMPLETED">
	                <category android:name="android.intent.category.HOME">
	            </category></action></intent-filter>
	        </receiver>
	        <activity 
			     android:name="aalto.comnet.thepreciousviewer.AlcoholConfig"
			   	 android:theme="@android:style/Theme.Dialog" android:screenOrientation="portrait">
	            <intent-filter>  
	                <action android:name="aalto.comnet.thepreciousviewer.AlcConfigAction"/>  
	                <category android:name="android.intent.category.DEFAULT" />  
            	</intent-filter>  
			</activity>
			<activity 
			     android:name="aalto.comnet.thepreciousviewer.PhysActConfig"
			   	 android:theme="@android:style/Theme.Dialog" android:screenOrientation="portrait">
	            <intent-filter>  
	                <action android:name="aalto.comnet.thepreciousviewer.PhysActConfigAction"/>  
	                <category android:name="android.intent.category.DEFAULT" />  
            	</intent-filter>  
			</activity>
	  <!-- Food intake app -->
	        <activity
            	android:name="aalto.comnet.thepreciousfoodintake.MainActivity"
            	android:label="@string/app_name" android:screenOrientation="portrait">
	        </activity>
	        <activity
            	android:name="aalto.comnet.thepreciousfoodintake.BarcodeScanner"
            	android:label="@string/app_name" android:screenOrientation="portrait">
	        </activity>
	        <activity
            	android:name="aalto.comnet.thepreciousfoodintake.ManualInput"
            	android:label="@string/app_name" android:screenOrientation="portrait">
	        </activity>
	        <activity
            	android:name="aalto.comnet.thepreciousfoodintake.CameraFoodRecognition"
            	android:label="@string/app_name" android:screenOrientation="portrait">
	        </activity>
