<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/choose_activity_icon_size"
        android:layout_height="@dimen/choose_activity_icon_size"
        android:tint="@color/white_trianlge"
        android:layout_margin="@dimen/choose_activity_icon_margin">
    </ImageView>

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:text="@+id/label"
        android:textSize="@dimen/choose_activity_text_size">
    </TextView>

</LinearLayout>
