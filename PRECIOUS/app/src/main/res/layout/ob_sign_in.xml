<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onboarding">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="248px"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/precious_logo"
        android:layout_marginTop="@dimen/ob_logo_margin_top"/>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid_layout"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/email"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/textView7" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:layout_row="0"
            android:layout_column="1"
            android:ems="10"
            android:id="@+id/etEmail"
            android:layout_marginLeft="@dimen/ob_edit_box_margin_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/password"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/textView16" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_row="1"
            android:layout_column="1"
            android:ems="10"
            android:id="@+id/etPassword"
            android:layout_marginLeft="@dimen/ob_edit_box_margin_left" />


    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/ob_sign_button_margin">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/ob_sign_button_text"
            android:layout_marginRight="@dimen/ob_sign_button_margin"
            android:text="@string/go_back"
            android:onClick="closeActivity"
            android:id="@+id/textView5"
            android:layout_gravity="center"
            android:textAlignment="gravity"
            android:background="@color/ob_button_background"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/ob_sign_button_text"
            android:text="@string/sign_in"
            android:onClick="signIn"
            android:id="@+id/textView6"
            android:layout_gravity="center"
            android:textAlignment="gravity"
            android:background="@color/ob_button_background"/>
    </LinearLayout>


</RelativeLayout>