<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to PRECIOUS wearable test.\nPlease try scanning for a new device and then click on its name, which should be MI1A. In order to avoid interference, please make sure that there is only one wearable nearby."
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentTop="false" />



    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/starScanButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="starScan"
        android:id="@+id/starScanButton"
        android:layout_marginTop="43dp"
        android:layout_marginStart="10sp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stopScan"
        android:id="@+id/stopScanButton"
        android:layout_above="@+id/listView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView35"
        android:layout_below="@+id/listView"
        android:layout_margin="10sp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
